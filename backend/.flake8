[flake8]
max-line-length = 100
extend-ignore = E203,W503,E501
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    node_modules,
    .pytest_cache,
    .mypy_cache,
    dist,
    build,
    *.egg-info,
    .tox,
    migrations,
    alembic/versions,
    data/uploads,
    output
per-file-ignores =
    __init__.py:F401
    tests/*:D
    test_*:D
max-complexity = 12