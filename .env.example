# Database Configuration
NEON_CONNECTION_STRING=postgresql://username:password@host:port/database?sslmode=require
SECRET_KEY=your-super-secret-key-change-this-in-production

# JWT Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# File Upload Configuration - Increased to 50MB for larger documents
MAX_UPLOAD_SIZE=52428800
ALLOWED_EXTENSIONS=["pdf","docx","md","html","png","jpg","jpeg","tiff","bmp","txt","rtf"]

# OpenAI Configuration (for embeddings and chat)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Mistral Configuration (alternative AI provider)
MISTRAL_API_KEY=your-mistral-api-key-here

# Security Configuration
FILE_VALIDATION_ENABLED=true
RATE_LIMITING_ENABLED=true
COMPRESSION_BOMB_DETECTION=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_STRUCTURED_LOGGING=true

# Monitoring Configuration
ENABLE_PROMETHEUS_METRICS=false
METRICS_PORT=9090

# Development Configuration
DEBUG=true
TESTING=false

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Admin Configuration
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=secure-admin-password

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database Migration Configuration
ALEMBIC_DATABASE_URL=postgresql://username:password@host:port/database